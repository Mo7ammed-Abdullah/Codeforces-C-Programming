#include<stdio.h>
int main(){
int i , n , x , f=0 ;
scanf("%d" , &n );
for(i=2; i<n ; i++){
    x = n%i;
    if(x==0){
        f = 1;
    }
    }

    if(f==1){
        printf("NO");
    }
    else if(n==1){
        printf("NO");
    }
     else if(n==0){
        printf("NO");
    }
    else if(n==2){
         printf("YES");
    }
    else{
        printf("YES");
    }

return 0;
}
